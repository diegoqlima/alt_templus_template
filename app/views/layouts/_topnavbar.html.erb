<header class="main-header">
  <!-- Logo -->
	<%= link_to root_path, class: 'logo' do %>
    <span class='logo-mini'><%=image_tag(Templus.logo_menor, class: 'img-responsive')%></span>
		<span class="logo-lg"><%=image_tag(Templus.logo, class: 'img-responsive')%></span>	
	<% end %>
  
  <nav class="navbar navbar-static-top" role="navigation">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Alternar navegação</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
    
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= image_tag 'user2-160x160.jpg', class: 'user-image' %>
            <span class="hidden-xs"><%= current_usuario.to_s %></span>
          </a>
          <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
              <%= image_tag 'user2-160x160.jpg', class: 'img-circle' %>
              <p>
                <%= current_usuario.to_s %>
                <small>Membro desde <%= RaroUtil.formata_data(current_usuario.created_at, "%B de %Y") %></small>
              </p>
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
              <div class="pull-left">
                <%= link_to 'Profile', edit_usuario_path(current_usuario), class: 'btn btn-default btn-flat' %>
              </div>
              <div class="pull-right">
                <%= link_to 'Sair', destroy_usuario_session_path, data: {method: :delete}, class: 'btn btn-default btn-flat' %>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>